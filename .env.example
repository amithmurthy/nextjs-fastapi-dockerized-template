# Project Configuration
# Copy this file to .env and customize as needed

# Project name (defaults to directory name if not set)
# This helps avoid Docker container naming conflicts
PROJECT_NAME=

# Development Port Configuration (default)
DEV_FRONTEND_PORT=3000
DEV_BACKEND_PORT=8000

# Production Port Configuration (to avoid conflicts with dev)
PROD_FRONTEND_PORT=3001
PROD_BACKEND_PORT=8001

# Environment
NODE_ENV=development

# API Configuration for Development
DEV_API_URL=http://backend-dev:8000
DEV_NEXT_PUBLIC_API_URL=http://localhost:8000

# API Configuration for Production
PROD_API_URL=http://backend:8001
PROD_NEXT_PUBLIC_API_URL=http://localhost:8001

# Legacy Port Configuration (for backward compatibility)
# These will be used if DEV_* or PROD_* variables are not set
FRONTEND_PORT=3000
BACKEND_PORT=8000
API_URL=http://backend-dev:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend Database (example)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Security (for production)
# JWT_SECRET_KEY=your-secret-key-here
# CORS_ORIGINS=https://your-frontend-domain.com
